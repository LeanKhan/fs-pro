generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Place {
  id        String   @id @map("_id") @default(uuid()) @db.Uuid
  mongoId   String?  @unique // Original MongoDB ObjectID
  Fullname  String
  Name      String
  Code      String   @unique
  Region    String?
  Type      String?
  Picture   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Places")
}