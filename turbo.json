{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env"
  ],
  "globalEnv": [
    "VITE_APP_API_BASE_URL",
    "DEV_MONGO_URL",
    "PROD_MONGO_URL",
    "CURRENT_YEAR",
    "LOGGING",
    "REMOTE_HOST"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        ".env.production.local",
        ".env.production",
        ".env.local",
        ".env"
      ]
    },
    "lint": {
      "inputs": [
        ".env.development.local",
        ".env.development",
        ".env.local",
        ".env"
      ],
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": [
        ".env.test.local",
        ".env.test",
        ".env.local",
        ".env"
      ]
    }
  }
}